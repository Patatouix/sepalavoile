{% extends "profile/base_profile.html.twig" %}

{% block stylesheets %}

    {{ parent() }}

    <style>

        .th {
            font-weight: 500;
        }

    </style>

{% endblock %}

{% block sideContent %}
    <div class="row align-items-center mb-4 justify-content-center justify-content-sm-start">
        <div class="col-auto">
            <div style="height: 150px; width: 150px;">
                {% if imgProfil %}
                    <img src="{{ asset('/uploads/' ~ imgProfil.nom) }}"
                        style="height: 100%; width: 100%; object-fit: cover;" class="rounded-circle">
                {% else %}
                    <img src="https://www.french-weekendbreaks.co.uk/sites/uk.picardiev3/themes/picardiev3/img_v2/user-default.jpg"
                        style="height: 100%; width: 100%; object-fit: cover;" class="rounded-circle">
                {% endif %}
            </div>
        </div>
        <div class="col-auto text-center text-sm-left mb-3 mt-3">
            <h5>{{ user.email }}</h5>
            <span style="color: #ff8300">
                {% if is_granted('ROLE_ADMIN') %}
                    <i class="fas fa-user-shield mr-2"></i>Administrateur
                {% endif %}
                {% if user.isAdherent %}
                    · <i class="fas fa-award mr-2"></i>Adhérent
                {% endif %}
                {% if user.isDonateur %}
                    · <i class="fas fa-heart mr-2"></i>Donateur
                {% endif %}
            </span>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered" style="display: inline-table">
            <thead>
                <tr style="background-color: #ff8300;">
                    <th style="color: white" colspan="4">
                        <i class="fad fa-user-cog text-white mr-2"></i> INFOS GENERALES
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="th">Prénom</td>
                    <td>{{ user.firstname|capitalize }}</td>
                    <td class="th">Code postal</td>
                    <td>{{ user.codePostal }}</td>
                </tr>
                <tr>
                    <td class="th">Nom</td>
                    <td>{{ user.name|capitalize }}</td>
                    <td class="th">Ville</td>
                    <td>{{ user.ville }}</td>
                </tr>
                <tr>
                    <td class="th">Pseudo</td>
                    <td>{{ user.pseudo }}</td>
                    <td class="th">Téléphone</td>
                    <td>{{ user.numTel }}</td>
                </tr>
                <tr>
                    <td class="th">Adresse</td>
                    <td>{{ user.adresse }}</td>
                    <td class="th">Date d'enregistrement</td>
                    <td>{{ user.createdAt|date('d/m/Y') }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="text-center text-sm-right mt-4 mt-sm-0">
        <!-- Button trigger modal infos -->
        <button type="button" class="btn btn-style mb-2" data-toggle="modal" data-target="#infosModal">
            Modifier mes infos
        </button>
        <!-- Button trigger modal password -->
        <button type="button" class="btn btn-darkgrey mb-2" data-toggle="modal" data-target="#mdpModal">
            Modifier mon mot de passe
        </button>
    </div>

    <!-- Modal infos -->
    <div class="modal fade" id="infosModal" tabindex="-1" role="dialog" aria-labelledby="infosModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modifier mes infos personnelles</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{ form_start(form, {attr: {id: 'profileForm'}}) }}
                {{ form_end(form) }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-darkgrey" data-dismiss="modal">Fermer</button>
                <button type="submit" form="profileForm" class="btn btn-style">Enregistrer</button>
            </div>
            </div>
        </div>
    </div>

    <!-- Modal password -->
    <div class="modal fade" id="mdpModal" tabindex="-1" role="dialog" aria-labelledby="mdpModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modifier mon mot de passe</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{ form_start(formPwd, {attr: {id: 'mdpForm'}, 'action': path('profile_password')}) }}
                {{ form_end(formPwd) }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-darkgrey" data-dismiss="modal">Fermer</button>
                <button type="submit" form="mdpForm" class="btn btn-style">Enregistrer</button>
            </div>
            </div>
        </div>
    </div>

{% endblock %}