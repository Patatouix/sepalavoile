{% extends 'carousel.html.twig' %}

{% block stylesheets %}

    {{ parent() }}

    <style>

        a, a:hover, a:focus {
            color: inherit;
            text-decoration: none;
            transition: all 0.3s;
        }

        #sidenav {
            color: #ff8300;
            transition: all 0.3s;
            border: 1px solid #ff8300;
        }

        #sidenav a:hover {
            color: #fff;
            background: #ff8300;
        }

        #sidenav a.selected, a[aria-expanded="true"] {
            color: #fff;
            background: #ff8300;
        }

        .SideNav-item {
            position: relative;
            display: block;
            width: 100%;
            padding: 12px 16px;
            text-align: left;
            background-color: initial;
            border: 0;
            border-top: 1px solid #ff8300;
            font-family: 'Open Sans', sans-serif;
        }

        a.SideNav-item {
            font-variant: small-caps;
        }

        h3.SideNav-item  {
            border-top: none;
        }

    </style>

{% endblock %}

{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-12 col-md-3 mb-5">
                <!-- Sidenav -->
                <nav id="sidenav" class="rounded">
                    <h3 class="SideNav-item">Mon compte</h3>
                    <a class="selected SideNav-item d-flex flex-items-center repo-menu-item" href="{{ path('profile_infos') }}">Profil</a>
                    <a class="SideNav-item d-flex flex-items-center repo-menu-item" href="{{ path('profile_medias') }}">Images</a>
                    <a class="SideNav-item d-flex flex-items-center repo-menu-item" href="{{ path('profile_achats') }}">Achats</a>
                    <a class="SideNav-item d-flex flex-items-center repo-menu-item" href="{{ path('profile_reservations') }}">RÃ©servations</a>
                    <a class="SideNav-item d-flex flex-items-center repo-menu-item" href="{{ path('profile_messagerie') }}">Messagerie</a>
                </nav>
            </div>
            <div class="col-12 col-md-9 mb-5">
                <!-- Page Content -->
                {% block sideContent %}{% endblock %}
            </div>
        </div>
    </div>

{% endblock %}