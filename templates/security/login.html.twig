{% extends "carousel.html.twig" %}

{% block content %}
<form method="post">
    {% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="container">
        {% if app.user %}
            <div class="alert alert-danger mb-5 col-6 offset-3">
                Vous êtes déjà connecté en tant que : {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnectez-vous</a>
            </div>
        {% endif %}
        <div class="col-6 offset-3 mb-5 border bg-light rounded">
            <h1 class="h3 mb-3 font-weight-normal text-center pt-4">
                Connectez-vous
            </h1>
            <label for="inputEmail">E-mail</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required
                autofocus>
            <label for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Se souvenir de moi
                </label>
            </div>
            #}

            <button class="btn btn-lg btn-style mt-4 mb-5" type="submit">
                Connexion
            </button>
            <a href="{{ path('app_forgot_password_request') }}" class="float-right">J'ai oublié mon mot de passe</a>
        </div>
    </div>
</form>
{% endblock %}
