{% block body %}
        <div id="show_partner" class="container bg-light rounded">
            <div class="row border-bottom py-3 px-5">
                <div class="col-6">
                    <h1 class="text-uppercase text-left m-0">
                        {{ partner.name }}
                    </h1>
                </div>
                <div class="col-6 text-right my-auto">
                    <span class="text-muted mr-2 font-italic">
                        Modifier le partenaire :
                    </span>
                    <a href="{{ path('partners_edit', {'id': partner.id}) }}">
                        <i class="fad fa-edit"></i>
                    </a>
                </div>
            </div>
            <div class="row bg-white">
                <div class="col-4 text-center my-auto">
                    {% if partner.media.nom %}
                        <img id='partnerImage' class="img-fluid w-50" alt="Logo du partenaire" src="{{ asset('/uploads/' ~ partner.media.nom ) }}">
                    {% else %}
                        <img id='partnerImage' class="img-fluid w-50" alt="Logo du partenaire" src="{{ asset('/images/logo.svg') }}">
                    {% endif %}
                </div>
                <div class="col-8 my-5 pl-5 border-left-profil ">
                    <div class="col-12">
                        <ul class="list-group list-group-flush">
                            <li class="list-group">
                                <div class="row mb-3">
                                    <div class="col-1 p-0 text-center"><i class="fad fa-id-badge"></i></div>
                                    <div class="col-4">Id Partenaire :</div>
                                    <div class="col-7 p-0">{{ partner.id }}</div>
                                </div>
                            </li>
                            <li class="list-group">
                                <div class="row mb-3">
                                    <div class="col-1 p-0 text-center"><i class="fad fa-calendar-check"></i></div>
                                    <div class="col-4">Nom du partenaire :</div>
                                    <div class="col-7 p-0">{{ partner.name }}</div>
                                </div>
                            </li>
                            <li class="list-group">
                                <div class="row mb-3">
                                    <div class="col-1 p-0 text-center"><i class="fad fa-calendar-times"></i></div>
                                    <div class="col-4">Site web du partenaire :</div>
                                    <div class="col-7 p-0">{{ partner.website }}</div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}