                                    <div class="col-7 p-0">{{ galerie_categorie.id }}</div>
                                </div>
                            </li>
                            <li class="list-group">
                                <div class="row mb-3">
                                    <div class="col-1 p-0 text-center"><i class="fad fa-user-alt"></i></div>
                                    <div class="col-4">Nom de la cétagorie :</div>
                                    <div class="col-7 p-0">{{ galerie_categorie.nom }}</div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}