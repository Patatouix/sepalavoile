{% extends 'base_dashboard.html.twig' %}

{% block title %}Liste des catégories pour les galeries{% endblock %}

{% block body %}
    <div id="galerieCategorie-list" class="container-fluid">
        <h1>Liste des catégories pour les galeries</h1>
        <div class="col-12  mt-5 mb-3">
            <a href="{{ path('galerie_categorie_new') }}" class="btn btn-style">Nouvelle catégorie</a>
        </div>
        <div class="table-responsive card px-2 py-2">
            <table id="example1" class="table table-bordered table-striped  mx-2 my-2">
                <thead>
                    <tr class="text-center">
                        <th>N°&nbsp;Id</th>
                        <th>Action</th>
                        <th>Nom</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr class="text-center">
                        <th>N°&nbsp;Id</th>
                        <th>Action</th>
                        <th>Nom</th>
                    </tr>
                </tfoot>
                <tbody>
                    {% for galerie_categorie in galerie_categories %}
                        <tr class="text-center">
                            <td>{{ galerie_categorie.id }}</td>
                            <td>
                                {# Modal pour voir un utilisateur #}
                                    <a href="" type="button" class="m-0" data-toggle="modal" data-target="#showGalerieCategorieModal{{ galerie_categorie.id }}">
                                        <i class="fad fa-eye"></i>
                                    </a>
                                    <div class="modal fade text-left" id="showGalerieCategorieModal{{ galerie_categorie.id }}" tabindex="-1" role="dialog" aria-labelledby="showGalerieCategorieModalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-lg" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h6 class="modal-title text-uppercase font-weight-bold">Consulter</h6>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body font-weight-normal p-0">
                                                    {% include "galerie_categorie/show.html.twig" %}

                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {# Fin de la modal voir un utilisateur #}

                                {# Lien pour modifier un utilisateur #}
                                <a href="{{ path('galerie_categorie_edit', {'id': galerie_categorie.id}) }}">
                                    <i class="fad fa-user-edit px-2 py-2"></i>
                                </a>
                                {# Fin lien pour modifier un utilisateur #}

                                {# Modal pour supprimer un utilisateur #}
                                    <a href="" type="button" class="m-0" data-toggle="modal" data-target="#deleteGalerieCategorieModal{{ galerie_categorie.id }}">
                                        <i class="fad fa-trash-alt"></i>
                                    </a>
                                    <div class="modal fade text-left" id="deleteGalerieCategorieModal{{ galerie_categorie.id }}" tabindex="-1" role="dialog" aria-labelledby="deleteGalerieCategorieModalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-lg" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title text-uppercase font-weight-bold">Voulez-vous supprimer cette catégorie : {{ galerie_categorie.nom }}</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body font-weight-normal">
                                                    <div class="col font-weight-bold">
                                                        Nom de la catégorie : {{ galerie_categorie.nom }}
                                                    </div>
                                                    <div class="modal-body font-weight-normal">
                                                        <div class="col">
                                                        </div>
                                                        <div class="col">
                                                        </div>
                                                        <div class="col">
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                                                        {% include "galerie_categorie/_delete_form.html.twig" %}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {# Fin de la modal supprimer un utilisateur #}

                            </td>
                            <td>
                                {{ galerie_categorie.nom }}
                            </td>

                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9">Pas d'enregistrement trouvé</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
