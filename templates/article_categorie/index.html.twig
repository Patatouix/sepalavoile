{% extends 'base_dashboard.html.twig' %}


{% block title %}Dashboard / Liste des catégories{% endblock %}

{% block body %}
    <div id="article_categorie-list" class="container-fluid">
        <h1>Liste des catégories</h1>
        <div class="col-12  mt-5 mb-3">
            <a href="{{ path('article_categorie_new') }}" class="btn btn-style">Nouvel catégories</a>
        </div>
        <div class="table-responsive card px-2 py-2">
            <table id="example1" class="table table-bordered table-striped  mx-2 my-2">
                <thead>
                    <tr class="text-center">
                        <th>N°&nbsp;Id</th>
                        <th width="10%">Action</th>
                        <th>Nom de la catégorie</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr class="text-center">
                        <th>N°&nbsp;Id</th>
                        <th width="10%">Action</th>
                        <th>Nom de la catégorie</th>
                    </tr>
                </tfoot>
                <tbody>
                    {% for article_categorie in article_categories %}
                        <tr class="text-center">
                            <td>{{ article_categorie.id }}</td>
                            <td>
                                {# Modal pour voir unr catégorie #}
                                    <a href="" type="button" class="m-0" data-toggle="modal" data-target="#showarticle_categorieModal{{ article_categorie.id }}">
                                        <i class="fad fa-eye"></i>
                                    </a>
                                    <div class="modal fade text-left" id="showarticle_categorieModal{{ article_categorie.id }}" tabindex="-1" role="dialog" aria-labelledby="showarticle_categorieModalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-xl" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h6 class="modal-title text-uppercase font-weight-bold">Consulter</h6>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body font-weight-normal p-0">
                                                    {% include "article_categorie/show.html.twig" %}

                                                    <div class="modal-footer"> 
                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {# Fin de la modal voir un utilisateur #}

                                {# Lien pour modifier un utilisateur #}
                                <a href="{{ path('article_categorie_edit', {'id': article_categorie.id}) }}">
                                    <i class="fad fa-user-edit px-2 py-2"></i>
                                </a>
                                {# Fin lien pour modifier un utilisateur #}

                                {# Modal pour supprimer un utilisateur #}
                                    <a href="" type="button" class="m-0" data-toggle="modal" data-target="#deletearticle_categorieModal{{ article_categorie.id }}">
                                        <i class="fad fa-trash-alt"></i>
                                    </a>
                                    <div class="modal fade text-left" id="deletearticle_categorieModal{{ article_categorie.id }}" tabindex="-1" role="dialog" aria-labelledby="deletearticle_categorieModalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-lg" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title text-uppercase font-weight-bold">Voulez-vous supprimer cette catégorie : {{ article_categorie.name }}</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body font-weight-normal">
                                                    <div class="col font-weight-bold">
                                                        Nom de la catégorie : {{ article_categorie.name }}
                                                    </div>
                                                    <div class="modal-body font-weight-normal">
                                                        <div class="col">
                                                        </div>
                                                        <div class="col">
                                                        </div>
                                                        <div class="col">
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer"> 
                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                                                        {% include "article_categorie/_delete_form.html.twig" %}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {# Fin de la modal supprimer un utilisateur #}

                            </td>
                            <td>
                                {{ article_categorie.name }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9">Pas d'enregistrement trouvé</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
